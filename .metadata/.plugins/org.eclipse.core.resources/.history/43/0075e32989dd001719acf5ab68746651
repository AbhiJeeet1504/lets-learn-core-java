package babasaheb;

public class TriagleRPattren {

	public static void main(String[] args) {
		int num = 10;
		for (int row = 1; row <= num; row++) {
			for (int col = 1; col <= row; col++) {
				if (row == 1 || col == 1 || row == num || col == col) {

					System.out.print(" * ");
				} else {
					System.out.print("   ");
				}

			}
			System.out.println();
		}

	}
}
